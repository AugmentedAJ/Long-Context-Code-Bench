+    @Test
+    public void testCustomHighlightQuery() throws Exception {
+        createIndex("test");
+        client().admin().cluster().prepareHealth("test").setWaitForGreenStatus().execute().actionGet();
+        
+        // Index a document with text that contains different terms
+        client().prepareIndex("test", "type1", "1")
+                .setSource("content", "The quick brown fox jumps over the lazy dog")
+                .setRefresh(true).execute().actionGet();
+        
+        // Search for "quick" but highlight "brown" using custom highlight query
+        SearchResponse response = client().prepareSearch("test")
+                .setQuery(termQuery("content", "quick"))
+                .setHighlighterType("plain")
+                .addHighlightedField("content")
+                .execute().actionGet();
+        
+        // Default behavior - should highlight "quick"
+        assertNoFailures(response);
+        assertThat(response.getHits().totalHits(), equalTo(1l));
+        assertThat(response.getHits().hits().length, equalTo(1));
+        assertThat(response.getHits().hits()[0].highlightFields().get("content").fragments()[0], containsString("<em>quick</em>"));
+        
+        // Now use custom highlight query to highlight "brown" instead
+        response = client().prepareSearch("test")
+                .setQuery(termQuery("content", "quick"))
+                .setHighlighterType("plain")
+                .setHighlightingPostTags("</em>")
+                .setHighlightingPreTags("<em>")
+                .addHighlightedField(
+                    highlight().field("content").highlightQuery(termQuery("content", "brown")))
+                .execute().actionGet();
+        
+        // Should highlight "brown" instead of "quick"
+        assertNoFailures(response);
+        assertThat(response.getHits().totalHits(), equalTo(1l));
+        assertThat(response.getHits().hits().length, equalTo(1));
+        assertThat(response.getHits().hits()[0].highlightFields().get("content").fragments()[0], containsString("<em>brown</em>"));
+        assertThat(response.getHits().hits()[0].highlightFields().get("content").fragments()[0], not(containsString("<em>quick</em>")));
+    }
